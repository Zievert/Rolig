@{
    ViewData["Title"] = "Register Activity";
}

<h2>Register Activity</h2>

<form asp-action="RegisterActivity" method="post">
    <label for="activityType">Activity Type:</label>
    <select id="activityType" name="activityType">
        <option value="running">Running</option>
        <option value="cycling">Cycling</option>
    </select><br>

    <label for="distance">Distance (in km):</label>
    <input type="number" id="distance" name="distance" step="0.1" placeholder="Distance in kilometers"><br>

    <button type="submit">Register Activity</button>
</form>
